<ivysettings>
    <properties file="ivy.properties" />
    <settings defaultResolver="default-chain" />
    <caches defaultCacheDir="${user.home}/.ivy2/cache" />

    <settings defaultResolver="default-chain" />

    <resolvers>
        
        <chain name="default-chain">
            <filesystem name="local-cache">
                <artifact pattern="${user.home}/.ivy2/cache/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]" />
                <ivy pattern="${user.home}/.ivy2/cache/[organisation]/[module]/ivy-[revision].xml" />
            </filesystem>
            <url name="default-release">
                <ivy pattern="https://s3.amazonaws.com/shamrock-maven/cache/[organisation]/[module]/[artifact]-[revision].[ext]" />
                <artifact pattern="https://s3.amazonaws.com/shamrock-maven/cache/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]" />
                <artifact pattern="https://s3.amazonaws.com/shamrock-maven/cache/[organisation]/[module]/[type]s/[artifact]-[revision]-[type].[ext]" />
                <artifact pattern="https://s3.amazonaws.com/shamrock-maven/cache/[organisation]/[module]/[type]s/[artifact]-[revision]-[type]s.[ext]" />
            </url> 
            <ibiblio name="ibiblio" m2compatible="true" />
            <ibiblio />
        </chain>
        <filesystem name="inplace">
            <artifact pattern="${repository.dir}/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]" />
            <ivy pattern="${repository.dir}/[organisation]/[module]/ivy-[revision].xml" />
        </filesystem>

    </resolvers>
    
</ivysettings>
